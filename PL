.collar-strap.pawprints {
  background-image: url('pawprints.png'); /* Usa una imagen de huellas */
  background-size: 50px 50px;
}
document.getElementById('preview-btn').addEventListener('click', function () {
  const color = document.getElementById('color').value;
  const pattern = document.getElementById('pattern').value;
  const collarStrap = document.querySelector('.collar-strap');

  // Cambia el color de fondo
  collarStrap.style.backgroundColor = color;

  // Cambia el estampado
  collarStrap.className = 'collar-strap'; // Resetea clases
  if (pattern !== 'none') {
    collarStrap.classList.add(pattern);
  }
});
